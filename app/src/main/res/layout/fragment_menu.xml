<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/example_text"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/example_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ib_emergency"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:drawablePadding="5dp"
                android:text="@string/title_menu_emergency"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_news"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_news_black_24dp"
                android:drawablePadding="5dp"
                android:text="@string/title_menu_news"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_stock"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
                android:drawablePadding="5dp"
                android:text="@string/title_menu_stock"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_message"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_chat_black_24dp"
                android:drawablePadding="5dp"
                android:text="@string/title_menu_message"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_notification"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_notifications_black_24dp"
                android:drawablePadding="5dp"
                android:text="@string/title_menu_notification"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_service"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_service_black_24dp"
                android:drawablePadding="5dp"
                android:enabled="true"
                android:text="@string/title_menu_service"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_settings"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_menu_settings"
                android:drawablePadding="5dp"
                android:enabled="true"
                android:text="@string/settings"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/ib_logout"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_menu_logout"
                android:drawablePadding="5dp"
                android:text="@string/logout"
                android:textAlignment="textStart" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>